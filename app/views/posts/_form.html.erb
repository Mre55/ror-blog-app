<%= form_with model: [user, user.posts.build], :html => { :class => "d-flex flex-column align-items-center"} do |form| %>
  <div class="w-100">
    <%= form.text_field :title, class: "form-control m-2", 
   placeholder: "Title..." %>
  </div>

  <div class="w-100">
    <%= form.text_area :text, class: "form-control m-2", 
   placeholder: "Post text..." %><br>
  </div>

  <div>
    <%= form.submit "Create Post", class: "btn btn-light" %>
  </div>
<% end %>