<h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field d-flex flex-column text-center">
    <%= f.label :email, class: "order-1" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-75 mx-auto order-2" %>
  </div>

  <div class="field d-flex flex-column text-center">
    <%= f.label :password, class: "order-1" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-75 mx-auto order-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field text-center mt-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions d-flex mt-3">
    <%= f.submit "Log in", class: "mx-auto"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
