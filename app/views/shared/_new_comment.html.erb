<%= form_with model: [user, post, post.comments.build], :html => { :class => "d-flex flex-column align-items-center"} do |form| %>
  <div class="w-50">
    <%= form.text_area :text, class: "form-control m-2", placeholder: "Write your comment..."%>
  </div>

  <div>
    <%= form.submit "Comment", class: "btn btn-secondary" %>
  </div>
<% end %>