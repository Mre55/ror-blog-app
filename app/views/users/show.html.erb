<%= render "shared/user_box", :name => @shown_user.name, :post_num => @shown_user.postsCounter, :photo => @shown_user.photo %>
<p class="border p-2 text-light" style="background-color:#1156A6"> <%= @shown_user.bio %> </p>
<% @recent_posts.each do |post|%>
  <%= link_to (user_post_path(@shown_user, post)), class: "text-decoration-none" do %>
    <%= render "shared/post_box", :title => post.title, :text => post.text, :comments_count => post.commentsCounter, :likes_count => post.likesCounter%>
  <% end %>
<% end %>
<a href="/users/<%= @shown_user.id %>/posts" class="btn btn-primary">See all posts</a>
<a href="/users/<%= @shown_user.id %>/posts/new"  class="btn btn-primary">New Post</a>